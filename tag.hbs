{{!< default}}

{{#tag}}

{{> components/category-filter active=slug}}

<section class="tag-page-hero">
    <div class="wrapper">
        <div class="tag-page-hero__text">
            <h1>{{name}}</h1>
            {{#if description}}
                <p>{{description}}</p>
            {{/if}}
        </div>
        {{#if feature_image}}
            <img src="{{feature_image}}" alt="{{name}}">
        {{/if}}
    </div>
</section>

<div class="tag-page-loop">
    {{> components/loop from='0' limit='all' filter="tag:{{slug}}"}}
</div>

<div class="tag-page-content">
    <div class="wrapper">
        {{#get "posts" filter='tag:hash-{{slug}}'}}
            {{#foreach posts}}
                {{> cards/minimal-card}}
            {{/foreach}}
        {{/get}}
    </div>
</div>


{{/tag}}