<section class="featured">
    <h2 class="featured__title">Featured</h2>
    {{#get "posts" include='authors' filter='featured:true' limit='5'}}
        {{#if posts}}
            <ul class="featured__list">
                {{#foreach posts}}
                    <li>{{> cards/featured-card}}</li>
                {{/foreach}}
            </ul>
        {{/if}}
    {{/get}}
    
    {{> components/form classes='js-form-secondary' button='Receive updates'}}
</section>