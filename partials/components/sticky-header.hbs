<div class="header header--sticky js-sticky-header js-header">
    <div class="wrapper">
        <a href="https://citizenx.com/insights" aria-label="go to homepage" class="logo-link-container">
            {{> icons/logo classes='logo logo--dark'}}
            <div class="mobile-logo js-mobile-logo">
                {{> icons/animation/logo}}
                {{> icons/animation/symbol}}
            </div>
        </a>

        <nav class="header-nav">
            <ul class="header-nav__main">
                <li>
                    <a href="https://citizenx.com/how-it-works">Why us</a>
                </li>
                <li>
                    <a href="https://citizenx.com/pricing">Pricing</a>
                </li>
            </ul>

            <ul class="header-nav__login-buttons">
                <li>
                    <a class="button button--white" href="https://home.citizenx.com/signin">
                        <span>Sign in</span>
                    </a>
                </li>
            </ul>
        </nav>

        {{> components/form classes='form--header' button='Subscribe'}}

        <button aria-label="open mobile menu" class="header-mobile-nav-target js-header-mobile-nav-target">
            {{> icons/menu}}
            {{> icons/close}}
        </button>

    </div>
    <div class="progress-bar-container js-progress-bar-container">
        <div class="progress-bar js-progress-bar"></div>
    </div>

    {{> components/mobile-nav}}
</div>